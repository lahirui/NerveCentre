@model IEnumerable<NerveCentre.App_DB.SetupDisplay>

@{
    ViewBag.Title = "Index";
}

<h2>SETUP</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="dataTable" class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayName("Factory")
            </th>
            <th>
                @Html.DisplayName("Television")
            </th>
            <th>
                @Html.DisplayName("Order")
            </th>
            <th>
                @Html.DisplayName("Type")
            </th>

            <th>
                @Html.DisplayName("Path")
            </th>
            <th>
                @Html.DisplayName("Duration")
            </th>

            <th>
                @Html.DisplayName("Status")
            </th>
            <th>
                @Html.DisplayName("Action")
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Factory.FactoryCode)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Television.TVName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resource.ResourceCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResourcePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>


            <td>
                @{ var ActiveOrNot = (item.IsActive.GetValueOrDefault() ? "ACTIVE" : "INACTIVE");}

                @Html.DisplayFor(modelItem => ActiveOrNot)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
        }
    </tbody>
</table>
